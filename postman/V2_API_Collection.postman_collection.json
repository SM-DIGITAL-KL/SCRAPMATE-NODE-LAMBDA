{
	"info": {
		"_postman_id": "v2-api-collection-001",
		"name": "ScrapMate V2 API Collection",
		"description": "Complete API collection for ScrapMate V2 endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login - Send OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has OTP\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('otp');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "api-key",
								"value": "{{api_key}}",
								"type": "text",
								"description": "API Key for authentication"
							},
							{
								"key": "ngrok-skip-browser-warning",
								"value": "true",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"9876543210\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v2/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v2",
								"auth",
								"login"
							]
						},
						"description": "Send OTP to phone number for login. Returns OTP, isNewUser flag, and userType if user exists."
					},
					"response": []
				},
				{
					"name": "Verify OTP - Complete Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('token');",
									"});",
									"",
									"pm.test(\"Response has dashboardType\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('dashboardType');",
									"});",
									"",
									"// Save token to environment variable",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set(\"auth_token\", jsonData.data.token);",
									"        pm.environment.set(\"user_id\", jsonData.data.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "api-key",
								"value": "{{api_key}}",
								"type": "text"
							},
							{
								"key": "ngrok-skip-browser-warning",
								"value": "true",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"9876543210\",\n    \"otp\": \"123456\",\n    \"joinType\": \"b2c\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v2/auth/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v2",
								"auth",
								"verify-otp"
							]
						},
						"description": "Verify OTP and complete login. For new users, joinType is required ('b2b', 'b2c', or 'delivery'). Returns user data, JWT token, and dashboardType."
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for V2 API"
		},
		{
			"name": "Shop Types",
			"item": [
				{
					"name": "Get All Shop Types",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
