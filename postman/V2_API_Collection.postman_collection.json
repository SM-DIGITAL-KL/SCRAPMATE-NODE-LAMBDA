									"});",
									"",
									"pm.test(\"Response has shop types\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.be.an('array');",
									"    pm.expect(jsonData.data.length).to.be.greaterThan(0);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "api-key",
								"value": "{{api_key}}",
								"type": "text"
							},
							{
								"key": "ngrok-skip-browser-warning",
								"value": "true",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v2/shop-types",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v2",
								"shop-types"
							]
						},
						"description": "Get all available shop types with their dashboard types."
					},
					"response": []
				}
			],
			"description": "Shop type management endpoints"
		},
		{
			"name": "Dashboard Management",
			"item": [
				{
					"name": "Get User Dashboards",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has allowedDashboards\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('allowedDashboards');",
									"    pm.expect(jsonData.data.allowedDashboards).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "api-key",
								"value": "{{api_key}}",
								"type": "text"
							},
							{
								"key": "ngrok-skip-browser-warning",
								"value": "true",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v2/user/dashboards/:userId",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
